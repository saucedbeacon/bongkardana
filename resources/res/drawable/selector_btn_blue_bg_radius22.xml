<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_enabled="true" android:state_pressed="false">
        <shape android:shape="rectangle">
            <stroke android:width="0.1dp" android:color="@color/color_invariant_20000000"/>
            <solid android:color="@color/ColorBlue"/>
            <corners android:radius="22dp"/>
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="0.1dp" android:color="@color/color_invariant_20000000"/>
            <solid android:color="@color/ColorBlue"/>
            <corners android:radius="22dp"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <stroke android:width="0.1dp" android:color="@color/ColorBlueTranslucence"/>
            <solid android:color="@color/ColorBlueTranslucence"/>
            <corners android:radius="22dp"/>
        </shape>
    </item>
</selector>
