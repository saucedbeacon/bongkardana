            <TextView android:textSize="18sp" android:textColor="@color/ColorGrayHeavier" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="@string/str_refund_description_title"/>
            <TextView android:textSize="18sp" android:textColor="@color/color_666666" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="@string/str_refund_description_content_claim"/>
            <TextView android:textSize="18sp" android:textColor="@color/color_666666" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="@string/str_refund_description_content_1"/>
            <TextView android:textSize="18sp" android:textColor="@color/color_666666" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/str_refund_description_content_2"/>
