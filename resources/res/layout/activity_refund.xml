                <TextView android:textSize="15sp" android:textColor="@color/ColorGrayNormal" android:id="@+id/tv_schedule_order_number" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:textSize="15sp" android:textColor="@color/ColorGrayNormal" android:id="@+id/tv_schedule_pay_type" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_marginBottom="4dp"/>
