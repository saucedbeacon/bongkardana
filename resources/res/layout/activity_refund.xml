        </LinearLayout>
        <Button android:textSize="18sp" android:textColor="@color/color_invariant_ffffff" android:gravity="center" android:id="@+id/btn_refund_schedule_confirm" android:background="@drawable/selector_rounded_corner_btn_blue_bg" android:layout_width="match_parent" android:layout_height="45dp" android:layout_marginLeft="20dp" android:layout_marginTop="30dp" android:layout_marginRight="20dp" android:text="@string/str_confirm"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_refund_submit_success" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
