        <LinearLayout android:orientation="vertical" android:paddingBottom="15dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="8dp">
            <View android:background="@color/color_00000000" style="@style/SplitLineStyleNoMarginHorizontal"/>
