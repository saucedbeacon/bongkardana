            <ImageView android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="45dp" android:src="@drawable/my_wallet_refund_icon_submitsuccess" android:contentDescription="@string/str_refund_application_processing"/>
            <TextView android:textSize="18sp" android:textColor="@color/ColorGrayHeavier" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/str_refund_submit_success"/>
            <TextView android:textSize="13sp" android:textColor="@color/ColorGrayNormal" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/str_refund_submit_success_description"/>
