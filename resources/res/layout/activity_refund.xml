                    <TextView android:textSize="15sp" android:textColor="@color/ColorGrayNormal" android:id="@+id/tv_fail_pay_type" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_marginBottom="4dp"/>
                    <TextView android:textSize="15sp" android:textColor="@color/ColorGrayNormal" android:id="@+id/tv_fail_time" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
