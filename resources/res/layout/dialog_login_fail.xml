        <TextView android:textSize="15sp" android:textColor="@color/color_666666" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/login_fail_tips_4" android:includeFontPadding="false"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_connection_fail" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="24dp">
        <TextView android:textSize="15sp" android:textColor="@color/color_666666" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/login_fail_tips_5" android:includeFontPadding="false"/>
