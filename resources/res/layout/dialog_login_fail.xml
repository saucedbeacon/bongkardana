        <TextView android:textSize="15sp" android:textColor="@color/color_666666" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/restart_device_tips" android:includeFontPadding="false"/>
    </LinearLayout>
    <View android:id="@+id/view_split_dialog_base_horizontal" android:layout_marginTop="28dp" style="@style/SplitLineStyleNoMarginHorizontal"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="48dp">
        <TextView android:textSize="16sp" android:textColor="@color/ColorGrayHeavier" android:gravity="center" android:id="@+id/tv_cancel" android:layout_width="0dp" android:layout_height="48dp" android:text="@string/str_cancel" android:layout_weight="1"/>
        <View android:id="@+id/view_cancel_and_confirm" android:background="@color/ColorGrayLighter" android:layout_width="0.4dp" android:layout_height="match_parent"/>
        <TextView android:textSize="16sp" android:textColor="@color/coloe_invariant_4B89FF" android:gravity="center" android:id="@+id/tv_confirm" android:layout_width="0dp" android:layout_height="48dp" android:text="@string/str_confirm" android:layout_weight="1"/>
