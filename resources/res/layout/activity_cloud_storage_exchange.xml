<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/ColorBackground" android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:id="@+id/rl_common_top_bar" layout="@layout/common_top_bar"/>
    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/cl_exchange_input_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:textSize="16sp" android:textColor="@color/ColorGrayHeavier" android:gravity="left" android:id="@+id/tv_exchange" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="21dp" android:layout_marginTop="47dp" android:layout_marginRight="21dp" android:text="@string/str_please_open_coupon" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toTopOf="0"/>
        <LinearLayout android:orientation="horizontal" android:background="@drawable/shape_rounded_corner_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="21dp" android:layout_marginTop="19dp" android:layout_marginRight="21dp" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toBottomOf="@+id/tv_exchange">
            <EditText android:textSize="16sp" android:ellipsize="end" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/et_exchange" android:background="@null" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="50dp" android:hint="@string/str_enter_coupon_password" android:singleLine="true" android:layout_weight="1" android:layout_below="@+id/txt_coupon_exchange"/>
            <ImageView android:layout_gravity="center" android:id="@+id/iv_delete" android:padding="17dp" android:visibility="gone" android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/login_btn_cancle"/>
        </LinearLayout>
        <Button android:id="@+id/btn_exchange" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="93dp" android:text="@string/str_next_step" app:layout_constraintBottom_toBottomOf="0" style="@style/RoundedCornerButton"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/cl_exchange_successful_layout" android:background="@color/color_title_ffffff" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:id="@+id/iv_exchange_successful" android:layout_width="99dp" android:layout_height="99dp" android:layout_marginTop="77dp" android:src="@drawable/login_icon_suceess" android:layout_centerHorizontal="true" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0"/>
        <TextView android:textSize="20sp" android:textColor="@color/ColorGrayHeavier" android:id="@+id/tv_exchange_successful" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="13dp" android:text="@string/str_coupon_exchange_success" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toBottomOf="@+id/iv_exchange_successful"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/ll_plan_detail_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="45dp" android:layout_marginTop="33dp" android:layout_marginRight="20dp" app:layout_constraintTop_toBottomOf="@+id/tv_exchange_successful">
            <TextView android:textSize="12sp" android:textColor="@color/color_000000" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/tv_plan_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:includeFontPadding="false"/>
            <TextView android:textSize="12sp" android:textColor="@color/ColorGrayHeavier" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/tv_plan_effective_time" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:includeFontPadding="false"/>
            <TextView android:textSize="12sp" android:textColor="@color/ColorGrayHeavier" android:gravity="left|center_vertical|center_horizontal|center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:text="@string/str_cloud_package_order_explain" android:includeFontPadding="false"/>
            <TextView android:textSize="12sp" android:textColor="@color/ColorGrayHeavier" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/tv_plan_explain1" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <TextView android:textSize="12sp" android:textColor="@color/ColorGrayHeavier" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/tv_plan_explain2" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp"/>
            <TextView android:textSize="12sp" android:textColor="@color/ColorGrayHeavier" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/tv_plan_explain3" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp"/>
            <TextView android:textSize="12sp" android:textColor="@color/ColorGrayHeavier" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/tv_plan_explain4" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp"/>
        </LinearLayout>
        <Button android:id="@+id/btn_exchange_successful_confirm" android:layout_width="match_parent" android:layout_marginBottom="93dp" android:text="@string/str_confirm" app:layout_constraintBottom_toBottomOf="0" style="@style/RoundedCornerButtonBlueBG"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/cl_exchange_failure_layout" android:background="@color/color_title_ffffff" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:id="@+id/iv_exchange_failure" android:layout_width="99dp" android:layout_height="99dp" android:layout_marginTop="77dp" android:src="@drawable/cloudstorage_icon_fail" android:layout_centerHorizontal="true" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0"/>
        <TextView android:textSize="20sp" android:textColor="@color/ColorGrayHeavier" android:id="@+id/tv_exchange_failure" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="13dp" android:text="@string/str_coupon_exchange_fail" android:includeFontPadding="false" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toBottomOf="@+id/iv_exchange_failure"/>
        <TextView android:textSize="12sp" android:textColor="@color/color_666666" android:gravity="center" android:paddingLeft="79dp" android:paddingRight="90dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/str_exchange_failure_reason" android:includeFontPadding="false" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toBottomOf="@+id/tv_exchange_failure"/>
        <Button android:id="@+id/btn_exchange_failure_confirm" android:layout_width="match_parent" android:layout_marginBottom="93dp" android:text="@string/str_confirm" app:layout_constraintBottom_toBottomOf="0" style="@style/RoundedCornerButtonBlueBG"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
