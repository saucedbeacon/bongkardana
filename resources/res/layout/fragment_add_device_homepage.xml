                <TextView android:textSize="13sp" android:textColor="@color/ColorGrayNormal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/add_device_4g_device_tips" android:includeFontPadding="false"/>
            </LinearLayout>
            <ImageView android:id="@+id/iv_icon_4g_device_arrow" android:layout_width="7dp" android:layout_height="14dp" android:layout_marginRight="19dp" android:src="@drawable/common_btn_next_gray" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/cl_suit_device_selection" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toBottomOf="@+id/cl_4g_device_selection" style="@style/common_selection_item_round">
            <ImageView android:background="@drawable/adddevice_icon_cardbg" android:layout_width="match_parent" android:layout_height="match_parent"/>
            <ImageView android:id="@+id/iv_icon_suit_device" android:layout_width="50dp" android:layout_height="50dp" android:layout_marginLeft="18dp" android:src="@drawable/adddevice_type_icon_kit" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toTopOf="0"/>
            <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="9dp" android:layout_marginRight="9dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toRightOf="@+id/iv_icon_suit_device" app:layout_constraintRight_toLeftOf="@+id/iv_icon_suit_device_arrow" app:layout_constraintTop_toTopOf="0">
                <TextView android:textSize="16sp" android:textColor="@color/ColorGrayHeavier" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/the_independent_network_camera" android:includeFontPadding="false"/>
