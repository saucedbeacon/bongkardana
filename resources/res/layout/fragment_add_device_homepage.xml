        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/ll_device_search" android:background="@drawable/left_dark_blue_gradient_right_blue_bg" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="17dp" android:minHeight="57dp" android:layout_marginStart="13dp" android:layout_marginEnd="13dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0">
            <com.airbnb.lottie.LottieAnimationView android:id="@+id/lav_searching" android:visibility="gone" android:layout_width="27dp" android:layout_height="27dp" android:layout_marginStart="20dp" app:lottie_autoPlay="true" app:lottie_fileName="add_device_searching.json" app:lottie_imageAssetsFolder="add_device_searching_images/" app:lottie_loop="true"/>
            <ImageView android:id="@+id/iv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/adddevice_icon_tips" android:layout_marginStart="20dp"/>
