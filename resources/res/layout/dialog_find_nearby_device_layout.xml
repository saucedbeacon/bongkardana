<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_gravity="center" android:orientation="vertical" android:background="@drawable/dialog_bg_20dp_2" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxHeight="540dp">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="27dp" android:layout_marginTop="28dp">
        <TextView android:textSize="19sp" android:textColor="@color/color_333333" android:gravity="center_vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/str_add_nearby_device" android:layout_weight="1" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/iv_close" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:src="@drawable/devicelist_popup_btn_close"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_nearby_device_list" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginTop="20dp" android:layout_weight="1" android:overScrollMode="never"/>
    <LinearLayout android:layout_gravity="center_vertical" android:paddingLeft="30dp" android:paddingTop="12dp" android:paddingBottom="23dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <CheckBox android:gravity="center_vertical" android:id="@+id/cb_not_search_nearby_device" android:layout_width="20dp" android:layout_height="20dp" android:button="@drawable/selector_nearby_device_checkbox" android:text="@string/str_common_not_search_nearby_device" android:layout_toLeftOf="@+id/tv_not_search_nearby_device" android:layout_centerVertical="true" android:scaleX="0.8" android:scaleY="0.8"/>
        <TextView android:textSize="15sp" android:textColor="@color/color_666666" android:id="@+id/tv_not_search_nearby_device" android:paddingLeft="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_common_not_search_nearby_device" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="50dp">
        <TextView android:textSize="16sp" android:textColor="@color/color_333333" android:gravity="center" android:id="@+id/btn_ignore" android:background="@drawable/shape_rounded_corner_25dp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="35dp" android:text="@string/str_find_nearby_device_ignore" android:layout_weight="1"/>
        <View android:layout_width="23dp" android:layout_height="match_parent"/>
        <TextView android:textSize="16sp" android:textColor="@color/color_invariant_ffffff" android:gravity="center" android:id="@+id/btn_to_connect" android:background="@drawable/shape_rounded_corner_25dp_blue" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginRight="35dp" android:text="@string/str_find_nearby_device_to_connect" android:layout_weight="1" android:alpha="0.5"/>
    </LinearLayout>
</LinearLayout>
