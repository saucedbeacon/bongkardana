            <TextView android:textSize="15sp" android:textColor="@color/color_666666" android:gravity="center" android:layout_gravity="center" android:id="@+id/tv_share" android:layout_width="90dp" android:layout_height="wrap_content" android:layout_marginTop="11dp" android:text="@string/str_album_share"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/ll_delete" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1">
            <ImageView android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/devicelist_btn_delete"/>
            <TextView android:textSize="15sp" android:textColor="@color/color_666666" android:gravity="center" android:layout_gravity="center" android:layout_width="90dp" android:layout_height="wrap_content" android:layout_marginTop="11dp" android:text="@string/str_album_delete"/>
