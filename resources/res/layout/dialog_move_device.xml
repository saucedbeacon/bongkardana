            <TextView android:textSize="15sp" android:textColor="@color/color_666666" android:gravity="center" android:layout_gravity="center" android:id="@+id/tv_move" android:layout_width="90dp" android:layout_height="wrap_content" android:layout_marginTop="11dp" android:text="@string/str_move"/>
