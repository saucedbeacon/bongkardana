<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:id="@+id/rl_common_top_bar" layout="@layout/common_top_bar"/>
    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/cl_recharge_layout" android:background="@color/color_ffffff" android:visibility="visible" android:layout_width="0dp" android:layout_height="0dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toBottomOf="@+id/rl_common_top_bar">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0">
            <ImageView android:layout_width="match_parent" android:layout_height="180dp" android:layout_marginTop="8dp" android:src="@drawable/my_wallet_img_rechargetips"/>
            <TextView android:textSize="16sp" android:textColor="@color/color_CC000000" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/str_cloud_service_recharge_top_up_tip"/>
            <View android:layout_marginTop="20dp" style="@style/SplitLineStyleNoMarginHorizontal"/>
            <RelativeLayout android:layout_gravity="center_vertical" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="46dp">
                <EditText android:textSize="16sp" android:id="@+id/et_card_number" android:background="@null" android:layout_width="match_parent" android:layout_height="46dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:hint="@string/str_top_up_vcoin_tip" android:singleLine="true" android:maxLength="64" android:layout_toLeftOf="@+id/iv_clean" android:layout_alignParentLeft="true"/>
                <ImageView android:id="@+id/iv_clean" android:background="@drawable/login_btn_cancle" android:visibility="invisible" android:layout_width="16dp" android:layout_height="16dp" android:layout_marginRight="10dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View style="@style/SplitLineStyleNoMarginHorizontal"/>
        </LinearLayout>
        <Button android:enabled="false" android:textColor="@color/color_invariant_ffffff" android:id="@+id/btn_recharge_confirm" android:background="@drawable/btn_login_gray" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginLeft="20dp" android:layout_marginTop="40dp" android:layout_marginRight="20dp" android:layout_marginBottom="30dp" android:text="@string/str_top_up_confirm" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" style="?android:attr/borderlessButtonStyle"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/cl_recharge_successful_layout" android:background="@color/color_ffffff" android:visibility="gone" android:layout_width="0dp" android:layout_height="0dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toBottomOf="@+id/rl_common_top_bar">
        <LinearLayout android:orientation="vertical" android:id="@+id/ll_recharge_successful_layout" android:paddingBottom="18dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0">
            <ImageView android:layout_gravity="center" android:layout_width="70dp" android:layout_height="70dp" android:layout_marginTop="78dp" android:src="@drawable/my_wallet_icon_rechargesuccess"/>
            <TextView android:textSize="18sp" android:textColor="@color/ColorGrayHeavier" android:gravity="center" android:layout_gravity="center" android:id="@+id/tv_recharge_successful_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="恭喜您成功充值10V"/>
            <TextView android:textSize="14sp" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:text="@string/str_top_up_successful_tip"/>
        </LinearLayout>
        <Button android:id="@+id/btn_recharge_successful_close" android:layout_width="match_parent" android:layout_height="46dp" android:layout_marginLeft="20dp" android:layout_marginTop="30dp" android:layout_marginRight="20dp" android:text="@string/str_recharge_close" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toBottomOf="@+id/ll_recharge_successful_layout" style="@style/RoundedCornerButtonBlueBGNoMargin"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/cl_recharge_fail_layout" android:background="@color/color_ffffff" android:visibility="gone" android:layout_width="0dp" android:layout_height="0dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toBottomOf="@+id/rl_common_top_bar">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/ll_recharge_fail_layout" android:paddingBottom="18dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0">
            <ImageView android:layout_width="70dp" android:layout_height="70dp" android:layout_marginTop="78dp" android:src="@drawable/my_wallet_icon_rechargefail"/>
            <TextView android:textSize="18sp" android:textColor="@color/ColorGrayHeavier" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="14dp" android:text="@string/str_recharge_fail"/>
            <View android:layout_marginTop="16dp" style="@style/SplitLineStyleNoMarginHorizontal"/>
            <TextView android:textSize="18sp" android:textColor="@color/color_invariant_ff4c2e" android:layout_gravity="left" android:paddingLeft="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/str_top_up_fail_reason_title"/>
            <TextView android:textSize="16sp" android:textColor="@color/color_000000" android:layout_gravity="left" android:paddingLeft="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="@string/str_top_up_fail_reason_1"/>
            <TextView android:textSize="16sp" android:textColor="@color/color_000000" android:layout_gravity="left" android:paddingLeft="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="@string/str_top_up_fail_reason_2"/>
            <TextView android:textSize="16sp" android:textColor="@color/color_000000" android:layout_gravity="left" android:paddingLeft="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="@string/str_top_up_fail_reason_3"/>
        </LinearLayout>
        <Button android:id="@+id/btn_recharge_again" android:layout_width="match_parent" android:layout_height="46dp" android:layout_marginLeft="20dp" android:layout_marginTop="26dp" android:layout_marginRight="20dp" android:text="@string/str_recharge_again" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toBottomOf="@+id/ll_recharge_fail_layout" style="@style/RoundedCornerButtonBlueBGNoMargin"/>
        <Button android:id="@+id/btn_recharge_fail_close" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginLeft="20dp" android:layout_marginTop="14dp" android:layout_marginRight="20dp" android:text="@string/str_recharge_close" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toBottomOf="@+id/btn_recharge_again" style="@style/RoundedCornerButtonNoMargin"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
