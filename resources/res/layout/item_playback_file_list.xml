<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/color_ffffff" android:layout_width="match_parent" android:layout_height="67dp" android:layout_marginTop="1dp">
    <RelativeLayout android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="17dp" android:layout_marginRight="14dp" android:layout_marginStart="17dp" android:layout_marginEnd="14dp">
        <com.macrovideo.v380pro.widgets.UCloudRecRoundRectImageView android:id="@+id/iv_bitmap" android:layout_width="67dp" android:layout_height="43dp" android:src="@drawable/cloudstorage_icon_defaultfigure" android:scaleType="fitXY"/>
        <ImageView android:id="@+id/iv_play_state" android:layout_width="17dp" android:layout_height="17dp" android:src="@drawable/ucloud_btn_play" android:layout_centerInParent="true"/>
        <ImageView android:id="@+id/iv_miniature_state" android:layout_width="16dp" android:layout_height="16dp" android:layout_marginBottom="1dp" android:src="@drawable/ucloud_icon_miniature" android:scaleType="center" android:layout_alignBottom="@+id/iv_bitmap" android:layout_marginEnd="1dp" android:layout_alignEnd="@+id/iv_bitmap"/>
    </RelativeLayout>
    <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:id="@+id/ll_all" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1">
        <TextView android:textSize="16sp" android:textColor="@color/color_4C89FE" android:id="@+id/tv_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="111"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp">
            <TextView android:textSize="13sp" android:textColor="@color/ColorGrayHeavier" android:id="@+id/tv_type" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="111" android:layout_weight="1"/>
            <TextView android:textSize="13sp" android:textColor="@color/ColorGrayHeavier" android:id="@+id/tv_time_size" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="111"/>
        </LinearLayout>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="60dp" android:layout_height="match_parent">
        <ImageView android:id="@+id/iv_download" android:padding="10dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ucloud_replay_btn_downloadradio" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
        <com.macrovideo.v380pro.ui.DownloadCircleProgressBar android:id="@+id/pb_download_progress" android:visibility="gone" android:layout_width="40dp" android:layout_height="40dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
        <TextView android:textSize="12sp" android:textColor="@color/coloe_invariant_4B89FF" android:id="@+id/tv_download_progress" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0%" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
        <ImageView android:layout_gravity="center" android:id="@+id/iv_download_pause" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ucloud_replay_btn_downloadstop" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
        <ImageView android:layout_gravity="center" android:id="@+id/iv_download_waiting" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ucloud_replay_btn_downloadwait" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
        <ImageView android:layout_gravity="center" android:id="@+id/iv_download_finish" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ucloud_replay_btn_downloadfinnish" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
        <ImageView android:layout_gravity="center" android:id="@+id/iv_download_error" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ucloud_replay_btn_downloadfail" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
