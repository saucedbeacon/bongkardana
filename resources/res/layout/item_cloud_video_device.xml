<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/ll_all_layout" android:background="@drawable/android_cloud_img_bg" android:padding="7dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="16sp" android:textColor="@color/color_333333" android:gravity="center_vertical" android:layout_gravity="center" android:id="@+id/tv_device_name" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="14dp" android:layout_marginTop="14dp" android:layout_marginRight="10dp" android:layout_marginBottom="17dp" android:text="123" android:singleLine="true" android:drawableLeft="@drawable/cloud_icon_cam" android:drawablePadding="8dp" android:layout_weight="1"/>
        <ImageView android:layout_gravity="center" android:id="@+id/iv_setting" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="14dp" android:src="@drawable/cloud_mycloud_btn_set"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView android:layout_gravity="center" android:id="@+id/rv_image_list" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <LinearLayout android:id="@+id/ll_video_file_time" android:paddingLeft="14dp" android:paddingRight="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="18dp" android:layout_marginBottom="17dp">
        <TextView android:textSize="12sp" android:textColor="@color/color_999999" android:id="@+id/tv_video_file_time" android:paddingRight="10dp" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/video_file_time" android:layout_weight="1"/>
        <TextView android:textSize="12sp" android:textColor="@color/color_999999" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_more" android:drawableRight="@drawable/cloud_btn_more" android:drawablePadding="6dp"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/ll_no_video_data" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginBottom="24dp">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/cloud_icon_novideo"/>
        <TextView android:textSize="15sp" android:textColor="@color/color_999999" android:id="@+id/tv_no_cloud_video_file_tips" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="17dp" android:text="@string/no_cloud_video_file_tips"/>
    </LinearLayout>
</LinearLayout>
