<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_gravity="center" android:orientation="vertical" android:background="@drawable/dialog_bg_7dp" android:layout_width="300dp" android:layout_height="wrap_content">
    <TextView android:textSize="17sp" android:textColor="@color/ColorGrayHeavier" android:gravity="center" android:id="@+id/tv_title" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="26dp" android:text="@string/add_groups"/>
    <LinearLayout android:layout_gravity="center" android:background="@drawable/shape_gray_stroke_radius_7dp" android:layout_width="260dp" android:layout_height="40dp" android:layout_marginTop="23dp">
        <EditText android:textSize="15sp" android:textColor="@color/ColorGrayHeavier" android:layout_gravity="center" android:id="@+id/et_input" android:background="@null" android:paddingLeft="8dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:hint="@string/input_groups_name" android:singleLine="true" android:maxLength="16" android:layout_weight="1"/>
        <ImageView android:layout_gravity="center" android:id="@+id/iv_delete" android:padding="10dp" android:visibility="gone" android:layout_width="35dp" android:layout_height="35dp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:src="@drawable/common_input_btn_cancle"/>
    </LinearLayout>
    <View android:background="@color/ColorGrayNormal" android:layout_width="match_parent" android:layout_height="0.4dp" android:layout_marginTop="23dp"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="47dp">
        <TextView android:textSize="16sp" android:textColor="@color/ColorGrayHeavier" android:gravity="center" android:id="@+id/tv_cancel" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/str_cancel" android:layout_weight="1"/>
        <View android:background="@color/ColorGrayNormal" android:layout_width="0.4dp" android:layout_height="match_parent"/>
        <TextView android:textSize="16sp" android:textColor="@color/coloe_invariant_4B89FF" android:gravity="center" android:id="@+id/tv_confirm" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/str_confirm" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
