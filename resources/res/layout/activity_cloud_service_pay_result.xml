<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/ColorBackground" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="20sp" android:textColor="@color/color_000000" android:ellipsize="end" android:gravity="center" android:background="@color/color_title_ffffff" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize" android:text="@string/str_order_pay" android:singleLine="true"/>
    <View style="@style/SplitLineStyleNoMarginHorizontal"/>
    <RelativeLayout android:id="@+id/rl_service_order_pay_result_layout" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="33dp">
            <ImageView android:layout_gravity="center" android:id="@+id/iv_service_order_pay_result_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="15dp" android:src="@drawable/cloudstorage_icon_success"/>
            <TextView android:textSize="20sp" android:textColor="@color/color_000000" android:gravity="center" android:id="@+id/txt_service_order_pay_result" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/str_pay_successful" android:layout_below="@+id/iv_service_order_pay_result_icon"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/ll_service_order_package_info_layout" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="5dp" android:layout_marginRight="20dp" android:layout_marginBottom="5dp" android:layout_below="@+id/txt_service_order_pay_result">
                <TextView android:textSize="12sp" android:textColor="@color/color_000000" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/txt_service_order_package_name" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="购买套餐：7天云存储月套餐"/>
                <TextView android:textSize="12sp" android:textColor="@color/ColorGrayHeavier" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/txt_service_order_package_price" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="订单金额：10元"/>
                <TextView android:textSize="12sp" android:textColor="@color/ColorGrayHeavier" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/txt_service_order_package_effective_time" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="有效时间：10元"/>
                <TextView android:textSize="12sp" android:textColor="@color/ColorGrayHeavier" android:gravity="left|center_vertical|center_horizontal|center" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/str_cloud_package_order_explain"/>
                <TextView android:textSize="12sp" android:textColor="@color/ColorGrayHeavier" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/tv_plan_explain1" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="1、1day外国过期云存储，套餐生效时日起开始保存云录像"/>
                <TextView android:textSize="12sp" android:textColor="@color/ColorGrayHeavier" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/tv_plan_explain2" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="2、云录像可保存7天，该套餐有效期为30天"/>
                <TextView android:textSize="12sp" android:textColor="@color/ColorGrayHeavier" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/tv_plan_explain3" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="3、该套餐带有人工智能分析"/>
                <TextView android:textSize="12sp" android:textColor="@color/ColorGrayHeavier" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/tv_plan_explain4" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="20dp" android:text="4、该套餐带消息通知服务"/>
                <TextView android:textSize="12sp" android:textColor="@color/ColorGrayHeavier" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/tv_plan_explain5" android:paddingLeft="20dp" android:paddingRight="20dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="20dp" android:text="5、同时购买多个云存储套餐，套餐有效期将自动叠加"/>
            </LinearLayout>
            <Button android:id="@+id/btn_confirm" android:layout_width="match_parent" android:text="@string/str_confirm" style="@style/RoundedCornerButtonBlueBG"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
