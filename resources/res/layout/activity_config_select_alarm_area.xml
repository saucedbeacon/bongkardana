<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/ColorBackInvariant" android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:id="@+id/common_top_bar" layout="@layout/common_top_bar_back_without_divider"/>
    <TextView android:textSize="17sp" android:textColor="@color/color_invariant_ffffff" android:gravity="center" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="37dp" android:layout_marginBottom="23dp" android:text="@string/config_area_select_tips"/>
    <androidx.constraintlayout.widget.ConstraintLayout android:background="@color/ColorBackInvariant" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:id="@+id/rl_alarm_area_container" android:layout_width="match_parent" android:layout_height="0dp" app:layout_constraintDimensionRatio="h,360:270" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0">
            <FrameLayout android:id="@+id/fl_select_alarm_area_player_container" android:background="@color/color_000000" android:layout_width="match_parent" android:layout_height="match_parent"/>
