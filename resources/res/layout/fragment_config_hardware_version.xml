<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/ColorBackground" android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:id="@+id/common_top_bar" layout="@layout/common_top_bar"/>
    <RelativeLayout android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toBottomOf="@+id/rl_common_top_bar">
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/ll_icon_check_version" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="73dp">
            <ProgressBar android:id="@+id/pb_waiting_for_check" android:background="@drawable/shape_gray_circular_bg" android:visibility="visible" android:layout_width="100dp" android:layout_height="100dp" android:indeterminateDrawable="@drawable/anim_waiting_circular"/>
            <ImageView android:id="@+id/iv_finish_check" android:background="@drawable/set_check_icon_logo" android:visibility="gone" android:layout_width="79dp" android:layout_height="79dp"/>
            <com.macrovideo.v380pro.utils.CircularProgressBar android:id="@+id/circularpb_upgrade_progress" android:visibility="gone" android:layout_width="100dp" android:layout_height="100dp"/>
            <TextView android:textSize="26sp" android:textColor="@color/ColorBlue" android:gravity="center" android:id="@+id/tv_upgrade_progress" android:background="@drawable/shape_progress_bg" android:visibility="gone" android:layout_width="100dp" android:layout_height="100dp" android:text=""/>
            <ImageView android:id="@+id/iv_upgrade_finish" android:background="@drawable/cloudstorage_icon_success" android:visibility="gone" android:layout_width="99dp" android:layout_height="99dp"/>
            <TextView android:textSize="18sp" android:textColor="@color/ColorGrayHeavier" android:gravity="center" android:id="@+id/txt_upgrade_status" android:paddingLeft="20dp" android:paddingRight="20dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="100dp" android:text="@string/str_donot_turn_off_power"/>
            <ImageView android:id="@+id/iv_update_completed" android:background="@drawable/set_check_icon_logo" android:visibility="gone" android:layout_width="79dp" android:layout_height="79dp"/>
        </LinearLayout>
        <TextView android:textSize="16sp" android:textColor="@color/ColorGrayBlack" android:gravity="center" android:id="@+id/txt_check_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="18dp" android:text="@string/str_checking" android:layout_below="@+id/ll_icon_check_version" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="13sp" android:textColor="@color/ColorGrayNormal" android:gravity="center" android:id="@+id/txt_software_version" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="" android:layout_below="@+id/txt_check_status" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="13sp" android:textColor="@color/ColorGrayNormal" android:gravity="center" android:id="@+id/txt_hardware_version" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:layout_below="@+id/txt_software_version" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="13sp" android:textColor="@color/ColorGrayNormal" android:gravity="center" android:id="@+id/tv_4g_version" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:layout_below="@+id/txt_hardware_version" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="13sp" android:textColor="@color/ColorGrayBlack" android:gravity="center" android:id="@+id/txt_latest_software_version" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="" android:layout_below="@+id/tv_4g_version" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="13sp" android:textColor="@color/ColorGrayBlack" android:gravity="center" android:id="@+id/txt_latest_hardware_version" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:layout_below="@+id/txt_latest_software_version" android:layout_centerHorizontal="true"/>
        <TextView android:textColor="@color/ColorBlue" android:gravity="center" android:id="@+id/txt_upgrading" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="@string/str_donot_turn_off_power" android:layout_below="@+id/txt_check_status" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <Button android:id="@+id/btn_upgrade_now" android:visibility="gone" android:layout_marginBottom="23dp" android:text="@string/str_upgrade_now" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" style="@style/RoundedCornerButtonBlueBG"/>
</androidx.constraintlayout.widget.ConstraintLayout>
