        <Button android:textSize="18dp" android:textColor="@color/color_0081e2" android:gravity="center" android:id="@+id/btn_cancel" android:background="?android:attr/selectableItemBackground" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/str_cancel" android:layout_weight="1" android:textAllCaps="false"/>
        <View android:layout_width="1dp" android:layout_height="match_parent" style="@style/SplitLineStyleNoMarginVertical"/>
        <Button android:textSize="18dp" android:textColor="@color/color_0081e2" android:gravity="center" android:id="@+id/btn_confirm" android:background="?android:attr/selectableItemBackground" android:paddingRight="10dp" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/str_confirm" android:layout_weight="1" android:textAllCaps="false"/>
    </LinearLayout>
</LinearLayout>
