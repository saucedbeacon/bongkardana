<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:paddingLeft="20dp" android:layout_width="match_parent" android:layout_height="64dp">
    <LinearLayout android:orientation="horizontal" android:id="@+id/ll_all_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
        <ImageView android:layout_gravity="center" android:id="@+id/iv_select" android:layout_width="22dp" android:layout_height="22dp" android:src="@drawable/common_btn_unselect"/>
        <TextView android:textSize="16sp" android:textColor="@color/ColorGrayHeavier" android:layout_gravity="center" android:id="@+id/tv_time" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="123" android:layout_weight="1"/>
        <RelativeLayout android:gravity="center" android:paddingRight="14dp" android:layout_width="wrap_content" android:layout_height="match_parent">
            <TextView android:textSize="12sp" android:textColor="@color/ColorGrayNormal" android:id="@+id/tv_original_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:text="$12.34"/>
            <TextView android:textSize="17sp" android:textColor="@color/color_invariant_FF6700" android:id="@+id/tv_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="$12.34" android:layout_toRightOf="@+id/tv_original_price"/>
            <TextView android:textSize="10sp" android:textColor="@color/color_invariant_FF6700" android:gravity="center" android:id="@+id/tv_promotion_price" android:background="@drawable/shape_orange_radius_10dp" android:paddingLeft="6dp" android:paddingTop="2dp" android:paddingRight="6dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="@string/promotion_price" android:layout_below="@+id/tv_price" android:layout_alignRight="@+id/tv_price"/>
        </RelativeLayout>
    </LinearLayout>
    <View android:background="@color/ColorGrayNormal" android:layout_width="match_parent" android:layout_height="0.4dp"/>
</LinearLayout>
