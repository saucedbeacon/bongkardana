<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/lySelectPattern" android:background="@color/color_ffffff" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:gravity="center_vertical" android:background="@color/color_ffffff" android:paddingTop="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="16sp" android:textColor="@color/color_0081e2" android:gravity="center" android:background="@color/color_ffffff" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/str_select_device_list_mode" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/ivClose" android:background="@color/color_ffffff" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="18dp" android:src="@drawable/devicelist_displayemodepopup_btn_close" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginEnd="18dp" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <LinearLayout android:layout_gravity="center" android:background="@color/color_ffffff" android:paddingTop="17dp" android:paddingBottom="18dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/ll_card_mode" android:background="@color/color_ffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="30dp" android:layout_marginEnd="30dp">
            <ImageView android:background="@drawable/devicelist_displayemodepopup_img_cardmode" android:layout_width="120dp" android:layout_height="210dp"/>
            <LinearLayout android:gravity="center_vertical" android:background="@color/color_ffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="18dp">
                <ImageView android:id="@+id/ivCard" android:background="@drawable/devicelist_displayemodepopup_btn_unselect" android:layout_width="20dp" android:layout_height="20dp"/>
                <TextView android:textSize="15sp" android:textColor="@color/ColorGrayHeavier" android:id="@+id/tvCard" android:background="@color/color_ffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:text="@string/str_device_list_focus_mode" android:layout_marginStart="6dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/ll_list_mode" android:background="@color/color_ffffff" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView android:background="@drawable/devicelist_displayemodepopup_img_listmode" android:layout_width="120dp" android:layout_height="210dp"/>
            <LinearLayout android:gravity="center_vertical" android:background="@color/color_ffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="18dp">
                <ImageView android:id="@+id/ivList" android:background="@drawable/devicelist_displayemodepopup_btn_unselect" android:layout_width="20dp" android:layout_height="20dp"/>
                <TextView android:textSize="15sp" android:textColor="@color/ColorGrayHeavier" android:id="@+id/tvList" android:background="@color/color_ffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:text="@string/str_device_list_classic_mode" android:layout_marginStart="6dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
